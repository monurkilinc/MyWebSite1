@model EntityLayer.Concrete.Writer

@*No:101 Yazar profil bilgileri düzenleme sayfası 
*@@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yazar Profil Bilgileri Düzenleme</h1>
<br />

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <br/>
                @Html.HiddenFor(x=>x.WriterID,new{@class="form-control"})
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Ad Soyad</label>
                        @Html.TextBoxFor(x=>x.WriterName,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mail Adresiniz</label>
                        @Html.TextBoxFor(x=>x.WriterMail,new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifreniz</label>
                        @Html.TextAreaFor(x=>x.WriterPassword,new{@class="form-control"})
                    </div>
                   
                    <div class="form-group">
                        <label>Yazar Profil Fotoğrafı</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Resim Yükle">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Resim Seç</button>
                            </span>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <label for="exampleTextarea1">Yazar Hakkında</label>
                        @Html.TextAreaFor(x=>x.WriterAbout,10,3,new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Onayla</button>
                    <button class="btn btn-light">İptal Et</button>
                </form>
            </div>
        </div>
    </div>


}
