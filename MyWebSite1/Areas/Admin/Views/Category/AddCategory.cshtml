@*No:116 Admin Paneli kategori ekleme sayfası
*@

@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />

@*@using (Html.BeginForm("AddCategory", "Category",new {area="Admin"}, FormMethod.Post))*@


@*No:116 Areas kavramında Begin Form yazılış şekli
*@
@using (Html.BeginRouteForm(
    routeName: "Admin", 
    routeValues: new { action = "AddCategory", controller = "Category", area = "Admin" },
    method: FormMethod.Post))


{
    <br />
    @Html.Label("Kategori Adı")
    <br />
    @Html.TextBoxFor(x=>x.CategoryName,new{ @class="form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryName)
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x=>x.CategoryDescription,10,170,new {@class="form-control"})
    @Html.ValidationMessageFor(x=>x.CategoryDescription)

    <br />

    <button href="/Admin/Category/Index"class="btn btn-info">Verileri Kaydet</button>
}

